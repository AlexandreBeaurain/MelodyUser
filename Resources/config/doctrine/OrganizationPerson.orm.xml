<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:gedmo="http://gediminasm.org/schemas/orm/doctrine-extensions-mapping" xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">
	<entity name="Melody\UserBundle\Entity\OrganizationPerson" table="organization_person" isCrossRef="1" phpName="OrganizationPerson">
		<id name="id" type="integer" required="1" primaryKey="1">
			<generator strategy="AUTO"/>
		</id>
		<field name="person_id" type="integer" required="1"/>
		<one-to-many field="person" target-entity="person">
			<join-column name="person_id" referenced-column-name="id" on-delete="cascade"/>
		</one-to-many>
		<field name="organization_id" type="integer" required="1"/>
		<one-to-many field="organization" target-entity="organization">
			<join-column name="organization_id" referenced-column-name="id" on-delete="cascade"/>
		</one-to-many>
	</entity>
</doctrine-mapping>
